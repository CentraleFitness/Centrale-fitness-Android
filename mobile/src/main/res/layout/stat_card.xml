<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:transitionName="statsOpening"
    android:id="@+id/cardViewStat"

    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@dimen/card_elevation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Elliptique"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:transitionName="eventTitleTransition" />


            <TextView
                android:id="@+id/cardStatDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="base"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="eventTitleTransition" />

            <TextView
                android:id="@+id/cardStatDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="duration"
                android:textStyle="bold"
                android:textSize="20sp"
                android:transitionName="eventTitleTransition" />






        </LinearLayout>


        <ImageView
            android:id="@+id/statPicture"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/elliptical"
            android:background="@drawable/event_registered_tab_unselected"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>