<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitness.centrale.mobile.activities.EditProfileActivity"
    android:orientation="vertical"
    android:theme="@style/AppThemeNoActionBar"

    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@dimen/top_bar_weight"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/EditProfileBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Options"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="32sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/EditProfileSubmit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_black_24dp"
                android:tint="#000000"/>
        </LinearLayout>




    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7"
    android:background="#F6F1F1">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_back_circle">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tint="#FFFFFF"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/EditMail"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="Adresse mail"
            android:inputType="textEmailAddress"
            android:textColorHint="#000000"
            android:textColor="#000000"/>

    </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_back_circle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/EditOldPassword"
                android:inputType="textPassword"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:hint="Ancien mot de passe"
                android:textColorHint="#000000"
                android:textColor="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_back_circle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lock_open_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/EditNewPassword"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:hint="Nouveau mot de passe"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:textColor="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_back_circle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lock_open_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/EditConfirm"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:hint="Confirmer le mot de passe"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:textColor="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_back_circle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_assignment_ind_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/EditFirstName"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:hint="Prénom"
                android:inputType="textNoSuggestions"
                android:textColorHint="#000000"
                android:textColor="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_back_circle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_assignment_ind_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/EditLastName"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:hint="Nom"
                android:inputType="textNoSuggestions"
                android:textColorHint="#000000"
                android:textColor="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_back_circle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone_android_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/EditPhone"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:hint="Numéro de téléphone"
                android:inputType="phone"
                android:textColorHint="#000000"
                android:textColor="#000000"/>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>



</LinearLayout>
