<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:elevation="@dimen/global_elevation_level"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DÃ©fis collectifs"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/white"
            android:elevation="@dimen/global_elevation_level"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Niveau actuel"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/ampoule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ampoule"
                    android:padding="10dp"/>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/console"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/console"
                    android:padding="10dp"/>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/television"
                    android:padding="10dp"/>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/washmachine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/washing_machine"
                    android:padding="10dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/detailsView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/grey"></LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>