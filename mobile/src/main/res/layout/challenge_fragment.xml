<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:elevation="@dimen/global_elevation_level"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ChallengesRegisteredTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:elevation="@dimen/global_elevation_level"
            android:orientation="vertical"
            android:background="@drawable/event_registered_tab_unselected">

            <TextView
                android:id="@+id/challenges_registered_tab_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/registered_challenges"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ChallengesAllTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:elevation="@dimen/global_elevation_level"

            android:background="@drawable/event_all_tab_unselected">

            <TextView
                android:id="@+id/challenges_all_tab_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/all_challenges"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <com.fitness.centrale.mobile.customcomponent.NonSlidablePager
            android:id="@+id/challengesPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>