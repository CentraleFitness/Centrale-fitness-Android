<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppThemeNoActionBar"
    tools:context=".newdesign.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black">

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:transitionName="profilemove"
            android:src="@drawable/ic_settings" />

        <ImageView
            android:id="@+id/sessionButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:transitionName="sessionmove"
            android:src="@drawable/common_google_signin_btn_icon_light" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                >

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/profileProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/profileLogin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"/>



            <ImageView
                android:id="@+id/ProfileSettings"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/black"
                android:src="@drawable/ic_settings"
                android:layout_marginBottom="50dp"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>