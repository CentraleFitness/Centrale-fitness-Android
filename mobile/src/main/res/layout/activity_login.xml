<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context="com.fitness.centrale.mobile.activities.LoginActivity"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:src="@drawable/logo_svg"
        android:tint="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:fontFamily="@font/bjor_regular"
        android:layout_marginTop="22dp"
        android:text="Centrale Fitness"

        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="37sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/form_card_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:tint="@color/black"

        android:src="@drawable/customer"
        app:layout_constraintEnd_toStartOf="@+id/loginEditPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <EditText
        android:id="@+id/loginEditLogin"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:hint="Login"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionNext"
        android:shadowColor="#000000"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@null"
        android:textColorLink="#000000"
        />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/form_card_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="2dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:tint="@color/black"

        android:src="@drawable/ic_lock_outline_black_24dp"
         />

    <EditText
        android:id="@+id/loginEditPassword"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:shadowColor="#000000"
        android:textColor="#000000"
        android:backgroundTint="@color/black"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textCursorDrawable="@null"
        android:textColorLink="#000000"
        />

        </LinearLayout>


    <Button
        android:id="@+id/loginButton"
        android:layout_width="231dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/buttonradius"
        android:text="Connexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEditPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="start|bottom">
    <TextView
        android:id="@+id/notregisterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="8dp"
        android:text="Pas encore inscrit ?"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>



</LinearLayout>
