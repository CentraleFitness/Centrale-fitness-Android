<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:theme="@style/AppThemeNoActionBar"
    tools:context=".activities.profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@dimen/top_bar_weight"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="@dimen/global_elevation_level">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="@dimen/top_bar_icon_size"
            android:layout_height="@dimen/top_bar_icon_size"
            android:tint="@color/grey"
            android:transitionName="profilemove"
            android:layout_gravity="center"
            android:src="@drawable/profil" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/sessionButton"
            android:layout_width="@dimen/top_bar_icon_size"
            android:layout_height="@dimen/top_bar_icon_size"

            android:transitionName="sessionmove"
            android:src="@drawable/sessionicon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/socialButton"
            android:layout_width="@dimen/top_bar_icon_size"
            android:tint="@color/grey"
            android:layout_height="@dimen/top_bar_icon_size"
            android:layout_gravity="center"
            android:transitionName="socialmove"
            android:src="@drawable/social" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#F9F1F1"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/centerPager"
            android:background="#F9F1F1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/challengesButton"
                android:layout_margin="10dp"
                android:layout_width="@dimen/little_button_size"
                android:layout_height="@dimen/little_button_size"
                android:src="@drawable/trophy"
                android:background="@drawable/circle"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:elevation="@dimen/buttons_elevation_level"
                />
            <ImageView
                android:id="@+id/eventButton"
                android:layout_margin="10dp"
                android:layout_width="@dimen/little_button_size"
                android:layout_height="@dimen/little_button_size"
                android:src="@drawable/fireworks"
                android:background="@drawable/circle"
                android:padding="10dp"
                android:layout_gravity="center_vertical"

                android:scaleType="fitCenter"
                android:adjustViewBounds="true"

                android:elevation="@dimen/buttons_elevation_level"
                />
            <ImageView
                android:id="@+id/sessionStartBtn"
                android:layout_margin="10dp"

                android:scaleType="centerCrop"
                android:adjustViewBounds="true"

                android:layout_width="@dimen/big_button_size"
                android:layout_height="@dimen/big_button_size"


                android:src="@drawable/link"
                android:layout_gravity="center_vertical"

                android:background="@drawable/circle"
                android:padding="10dp"
                android:elevation="@dimen/buttons_elevation_level"
                />

            <ImageView
                android:id="@+id/statsButton"
                android:layout_width="@dimen/little_button_size"
                android:layout_height="@dimen/little_button_size"

                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"

                android:adjustViewBounds="true"

                android:background="@drawable/circle"
                android:padding="10dp"
                android:elevation="@dimen/buttons_elevation_level"
                android:src="@drawable/analytics"
                />
            <ImageView
                android:id="@+id/programsButton"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/little_button_size"
                android:layout_height="@dimen/little_button_size"
                android:src="@drawable/controls"
                android:background="@drawable/circle"
                android:padding="10dp"
                android:elevation="@dimen/buttons_elevation_level"
                />


        </LinearLayout>


    </LinearLayout>





</LinearLayout>